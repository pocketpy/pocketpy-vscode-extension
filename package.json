{
  "name": "pocketpy",
  "displayName": "pocketpy",
  "icon": "icon.png",
  "description": "pocketpy development tools for VSCode",
  "version": "0.0.4",
  "publisher": "pocketpy",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocketpy/pocketpy-vscode-extension"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Debuggers",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "pocketpy",
        "command": "pocketpy.loadProfilerReportJson",
        "title": "Load Line Profiler Report"
      }
    ],
    "breakpoints": [
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "pocketpy",
        "label": "pocketpy",
        "configurationAttributes": {
          "attach": {
            "required": [
              "port",
              "host",
              "sourceFolder"
            ],
            "properties": {
              "port": {
                "type": "number",
                "description": "Port number for connecting to the debug adapter."
              },
              "host": {
                "type": "string",
                "description": "Host address of the debug adapter."
              },
              "sourceFolder": {
                "type": "string",
                "description": "Root folder for source files."
              }
            }
          },
          "launch": {
            "required": [
              "port",
              "host",
              "sourceFolder",
              "program",
              "args"
            ],
            "properties": {
              "port": {
                "type": "number",
                "description": "Port number for connecting to the debug adapter."
              },
              "host": {
                "type": "string",
                "description": "Host address of the debug adapter."
              },
              "sourceFolder": {
                "type": "string",
                "description": "Root folder for source files."
              },
              "program": {
                "type": "string",
                "description": "Path to the program to debug."
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments to pass to the program."
              },
              "cwd" : {
                "type": "string",
                "description": "Current working directory for the program."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "pocketpy",
            "request": "attach",
            "name": "Attach to pocketpy program",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}"
          },
          {
            "type": "pocketpy",
            "request": "launch",
            "name": "Launch pocketpy program",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}",
            "program": "${workspaceFolder}/pocketpy/main.exe",
            "args": ["--debug"],
            "cwd": "${workspaceFolder}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "typescript": "^5.7.3"
  }
}