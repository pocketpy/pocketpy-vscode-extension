{
  "name": "pocketpydbg",
  "displayName": "pocketpy",
  "description": "A lightweight pocketpy debugger for the PocketPy runtime.",
  "version": "0.0.1",
  "publisher": "pocketpy",
  "repository": {
  "type": "git",
  "url": "https://github.com/pocketpy/pocketpy-vscode-extension.gits"
},
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pocketpydbg.loadLineProfiler",
        "title": "Load Line Profiler Results"
      }
    ],
    "breakpoints": [
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "pocketpy",
        "label": "pocketpy debugger",
        "configurationAttributes": {
          "attach": {
            "required": [
              "port",
              "host"
            ],
            "properties": {
              "port": {
                "type": "number",
                "default": 3939,
                "description": "Port number for connecting to the debug adapter."
              },
              "host": {
                "type": "string",
                "default": "localhost",
                "description": "Host address of the debug adapter."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "python-debug",
            "request": "attach",
            "name": "Attach to pocketpy Runtime",
            "port": 6110,
            "host": "localhost"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "typescript": "^5.7.3"
  }
}
