{
  "name": "pocketpydbg",
  "displayName": "pocketpyDbg",
  "description": "简单的 Python 调试器 Demo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      { "language": "python" }
    ],
    "debuggers": [
      {
        "type": "python-debug",
        "label": "Python 调试器",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "要调试的 Python 程序的路径（注意：使用侵入式调试模式，程序需调用 wait_for_client()）",
                "default": ""
              },
              "args": {
                "type": "array",
                "description": "命令行参数",
                "default": []
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "是否在程序入口点停止",
                "default": false
              }
            }
          },
          "attach": {
            "required": [
              "port"
            ],
            "properties": {
              "port": {
                "type": "number",
                "description": "调试器监听的端口号",
                "default": 3939
              },
              "host": {
                "type": "string",
                "description": "调试器主机地址",
                "default": "localhost"
              },
              "pathMappings": {
                "type": "array",
                "description": "本地文件路径到远程路径的映射",
                "default": []
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "python-debug",
            "request": "launch",
            "name": "启动 Python 程序（侵入式）",
            "program": "${file}",
            "description": "程序需导入 debug_adapter 并调用 wait_for_client()"
          },
          {
            "type": "python-debug",
            "request": "attach",
            "name": "附加到 Python 进程",
            "port": 3939,
            "host": "localhost"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/node": "20.x",
    "typescript": "^5.7.3"
  }
}