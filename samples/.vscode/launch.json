    "version": "0.2.0",
    "configurations": [
        {
            "type": "pocketpy",
            "request": "attach",
            "name": "Attach to pocketpy program",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}"
        },
        {
            "type": "pocketpy",
            "request": "launch",
            "name": "Launch pocketpy program",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}",
            "program": "E:/pocketpy/main.exe",
            "args": ["--debug", "test_script2.py"]
        }
    ]
}