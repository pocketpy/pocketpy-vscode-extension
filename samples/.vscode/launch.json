    "version": "0.2.0",
    "configurations": [
        {
            "type": "pocketpy",
            "request": "attach",
            "name": "Attach to pocketpy Runtime",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}"
        },
        {
            "type": "pocketpy",
            "request": "launch",
            "name": "Launch pocketpy Runtime",
            "port": 6110,
            "host": "localhost",
            "sourceFolder": "${workspaceFolder}",
            "program": "${workspaceFolder}/pocketpy/main.exe",
            "args": []
        }
    ]
}